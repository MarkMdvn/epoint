<t name="Checkout Extra Info" active="False" t-name="website_sale.extra_info">
    <t t-call="website_sale.checkout_layout">
        <t t-set="show_navigation_button" t-value="False"/>
        <t t-set="redirect" t-valuef="/shop/extra_info"/>

        <!-- This variable remains the same, holding all product IDs from the cart -->
        <t t-set="product_ids_in_cart" t-value="website_sale_order.order_line.product_id.ids"/>

        <div class="oe_structure" id="oe_structure_website_sale_extra_info_1"/>

        <h3 class="mb-4">Información adicional</h3>
        <section class="s_website_form o_colored_level" data-vcss="001" data-snippet="s_website_form">
            <div class="container">
                <form action="/website/form/" method="post" enctype="multipart/form-data" class="o_mark_required s_website_form_no_recaptcha" data-mark="*" data-force_action="shop.sale.order" data-model_name="sale.order" data-success-mode="redirect" data-success-page="/shop/payment" hide-change-model="true">
                    <div class="s_website_form_rows s_col_no_bgcolor row">

                        <!-- ======================================================= -->
                        <!-- 1. ALWAYS-VISIBLE AND MANDATORY FIELDS                  -->
                        <!-- ======================================================= -->
                        <div class="s_website_form_field mb-3 col-12 s_website_form_custom" data-type="date" data-name="Field">
                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="oj7jn4ogwkha">
                                    <span class="s_website_form_label_content">Fecha de Nacimiento</span>
                                </label>
                                <div class="col-sm">
                                    <div class="s_website_form_date input-group date">
                                        <!-- Added required="1" -->
                                        <input type="text" class="form-control datetimepicker-input s_website_form_input" name="Fecha de Nacimiento" value="" placeholder="01/01/1990" id="oj7jn4ogwkha" required="1"/>
                                        <div class="input-group-text o_input_group_date_icon">
                                            <i class="fa fa-calendar"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- ==================================================================== -->
                        <!-- 2. FIELDS FOR PRODUCT ID 20 (All mandatory)                        -->
                        <!-- ==================================================================== -->
                        <t t-if="20 in product_ids_in_cart">
                            <div data-name="Field" class="s_website_form_field mb-3 col-12 s_website_form_custom" data-type="char">
                                <div class="row s_col_no_resize s_col_no_bgcolor">
                                    <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="omvj4ah77du"><span class="s_website_form_label_content">Propietario</span></label>
                                    <div class="col-sm"><input class="form-control s_website_form_input" type="text" name="Propietario" id="omvj4ah77du" required="1"/></div>
                                </div>
                            </div>
                            <div data-name="Field" class="s_website_form_field mb-3 col-12 s_website_form_custom" data-type="char">
                                <div class="row s_col_no_resize s_col_no_bgcolor">
                                    <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="orhjl9rkbq3k"><span class="s_website_form_label_content">DNI del Propietario</span></label>
                                    <div class="col-sm"><input class="form-control s_website_form_input" type="text" name="DNI del Propietario" id="orhjl9rkbq3k" required="1"/></div>
                                </div>
                            </div>
                            <div data-name="Field" class="s_website_form_field mb-3 col-12 s_website_form_custom" data-type="char">
                                <div class="row s_col_no_resize s_col_no_bgcolor">
                                    <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="onpnq6z6yjii"><span class="s_website_form_label_content">Nombre del caballo</span></label>
                                    <div class="col-sm"><input class="form-control s_website_form_input" type="text" name="Nombre del caballo" id="onpnq6z6yjii" required="1"/></div>
                                </div>
                            </div>
                            <div data-name="Field" class="s_website_form_field mb-3 col-12 s_website_form_custom" data-type="date">
                                <div class="row s_col_no_resize s_col_no_bgcolor">
                                    <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="o2vk9dto2qks"><span class="s_website_form_label_content">Fecha de nacimiento del caballo</span></label>
                                    <div class="col-sm">
                                        <div class="s_website_form_date input-group date">
                                            <input type="text" class="form-control datetimepicker-input s_website_form_input" name="Fecha de nacimiento del caballo" id="o2vk9dto2qks" required="1"/>
                                            <div class="input-group-text o_input_group_date_icon"><i class="fa fa-calendar"/></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div data-name="Field" class="s_website_form_field mb-3 col-12 s_website_form_custom" data-type="char">
                                <div class="row s_col_no_resize s_col_no_bgcolor">
                                    <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="ofuk9kmcocv4"><span class="s_website_form_label_content">UELN</span></label>
                                    <div class="col-sm"><input class="form-control s_website_form_input" type="text" name="UELN" id="ofuk9kmcocv4" required="1"/></div>
                                </div>
                            </div>
                            <div data-name="Field" class="s_website_form_field mb-3 col-12 s_website_form_custom" data-type="char">
                                <div class="row s_col_no_resize s_col_no_bgcolor">
                                    <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="outpgxadmny"><span class="s_website_form_label_content">Microchip</span></label>
                                    <div class="col-sm"><input class="form-control s_website_form_input" type="text" name="Microchip" id="outpgxadmny" required="1"/></div>
                                </div>
                            </div>
                            <div data-name="Field" class="s_website_form_field mb-3 col-12 s_website_form_custom" data-type="char">
                                <div class="row s_col_no_resize s_col_no_bgcolor">
                                    <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="oc7af2hu96iw"><span class="s_website_form_label_content">Localidad</span></label>
                                    <div class="col-sm"><input class="form-control s_website_form_input" type="text" name="Localidad" id="oc7af2hu96iw" required="1"/></div>
                                </div>
                            </div>
                            <div data-name="Field" class="s_website_form_field mb-3 col-12 s_website_form_custom" data-type="char">
                                <div class="row s_col_no_resize s_col_no_bgcolor">
                                    <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="oz2t2rodsqd"><span class="s_website_form_label_content">Provincia</span></label>
                                    <div class="col-sm"><input class="form-control s_website_form_input" type="text" name="Provincia" id="oz2t2rodsqd" required="1"/></div>
                                </div>
                            </div>
                            <div data-name="Field" class="s_website_form_field mb-3 col-12 s_website_form_custom" data-type="binary">
                                <div class="row s_col_no_resize s_col_no_bgcolor">
                                    <label class="col-sm-auto s_website_form_label" style="width: 200px" for="on907qdg5qt"><span class="s_website_form_label_content">Foto de la Documentación del Caballo</span></label>
                                    <div class="col-sm"><input type="file" class="form-control s_website_form_input" name="Foto de la Documentación del Caballo" id="on907qdg5qt" data-max-files-number="3" data-max-file-size="20" required="1"/></div>
                                </div>
                            </div>
                        </t>

                        <!-- ==================================================================== -->
                        <!-- 3. FIELDS FOR PRODUCT ID 13 (Mandatory)                            -->
                        <!-- ==================================================================== -->
                        <t t-if="13 in product_ids_in_cart">
                            <div data-name="Field" class="s_website_form_field mb-3 col-12 s_website_form_custom" data-type="char">
                                <div class="row s_col_no_resize s_col_no_bgcolor">
                                    <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="product_13_actividad">
                                        <span class="s_website_form_label_content">Actividad</span>
                                    </label>
                                    <div class="col-sm">
                                        <input class="form-control s_website_form_input" type="text" name="Actividad" id="product_13_actividad" required="1"/>
                                    </div>
                                </div>
                            </div>
                        </t>

                        <!-- ==================================================================== -->
                        <!-- 4. FIELDS FOR PRODUCT ID 12 (One mandatory, one optional)          -->
                        <!-- ==================================================================== -->
                        <t t-if="12 in product_ids_in_cart">
                            <div data-name="Field" class="s_website_form_field mb-3 col-12 s_website_form_custom" data-type="selection">
                                <div class="row s_col_no_resize s_col_no_bgcolor">
                                    <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="product_12_asociacion">
                                        <span class="s_website_form_label_content">Nombre de Asociación</span>
                                    </label>
                                    <div class="col-sm">
                                        <select class="form-select s_website_form_input" name="Nombre de Asociación" id="product_12_asociacion" required="1">
                                            <option value="">Seleccione una opción...</option>
                                            <option value="Ejemplo 1">Ejemplo 1</option>
                                            <option value="Ejemplo 2">Ejemplo 2</option>
                                            <option value="Ejemplo 3">Ejemplo 3</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div data-name="Field" class="s_website_form_field mb-3 col-12 s_website_form_custom" data-type="char">
                                <div class="row s_col_no_resize s_col_no_bgcolor">
                                    <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="product_12_cargo">
                                        <span class="s_website_form_label_content">Cargo (opcional)</span>
                                    </label>
                                    <div class="col-sm">
                                        <!-- Note: No required="1" on this field -->
                                        <input class="form-control s_website_form_input" type="text" name="Cargo" id="product_12_cargo"/>
                                    </div>
                                </div>
                            </div>
                        </t>

                        <!-- ======================================================= -->
                        <!-- 5. SUBMIT BUTTON (No changes needed here)                 -->
                        <!-- ======================================================= -->
                        <div class="s_website_form_submit s_website_form_no_submit_option d-flex flex-column flex-lg-row align-items-lg-center pt-4">
                            <a role="button" name="website_sale_main_button" class="s_website_form_send btn btn-primary order-lg-3 w-100 w-lg-auto ms-lg-auto" href="/shop/confirm_order">
                                Continuar al pago
                                <i class="fa fa-angle-right ms-2 fw-light"/>
                            </a>
                            <div class="position-relative d-flex d-lg-none w-100 justify-content-center align-items-center my-2 opacity-75">
                                <hr class="w-100"/>
                                <span class="px-3">o</span>
                                <hr class="w-100"/>
                            </div>
                            <a href="/shop/checkout" class="text-center">
                                <i class="fa fa-angle-left me-2 fw-light"/>
                                Volver a los detalles de envío
                            </a>
                            <span id="s_website_form_result"/>
                        </div>

                    </div>
                </form>
            </div>
        </section>
    </t>
</t>
